<% @user  = User.all %>

<body>
    <div class="container">
        <div class="row">
            <%= render 'layouts/left' %>
            <div class="col-lg-6">
                <h2>投稿一覧</h2>
                投稿が一覧表示される
                <br>
                テスト：<%= @user.name%>
                <% @board.length.times do |num|%>
                <% if @board.find_by_id(num).nil? %>
                <% else %>
                <div class="box1">
                    ユーザーID：<%= @board.find_by_id(num)[:user_id] %>
                    <br>
                    <span class="content">
                        タイトル： <%=  @board.find_by_id(num)[:title] %>
                    </span>
                    <br>
                </div>
                <% end %>
                <% end %>
            </div>
            <%= render 'layouts/right' %>
        </div>
    </div>
</body>