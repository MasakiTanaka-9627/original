<%= form_for(@user) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

<div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control' %>
</div>

<% if logged_in? %>
<div class="form-group">
    <%= f.label :image, 'プロフィール画像' %>
    <br>
    <%= f.file_field :image, class: '' %>
</div>

<div class="form-group">
    <%= f.label :content, '自己紹介文' %>
    <%= f.text_area :profile, class: 'form-control', size: "10x5" %>
</div>
<% else %>
<div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :password_confirmation, 'パスワード（もう１度ご入力ください）' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
</div>
<% end %>

<div class="col-lg-8 offset-lg-2">
    <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
</div>
<% end %>

<% if logged_in? %>
<h2 class="mt-3">ユーザー削除フォーム</h2>

<div class="col-lg-8 offset-lg-2">
    <%= link_to "ユーザー削除", user_path(current_user.id), class: 'btn btn-outline-danger btn-block', method: :delete, data: { confirm: '削除しますか？' }  %>
    <div>
        <% end %>