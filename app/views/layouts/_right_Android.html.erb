<h2 class="mt-3">Androidランキング</h2>
<div class="timestamp">更新日時：<%= RecommendGame.first.updated_at.to_s(:datetime_jp) %></div>
<ul class="list-group">
    <% 5.times do |n| %>
    <li class="list-group-item">
        <div class="float-left"><%= image_tag RecommendGame.find(n).image, :size => '50x50' %></div><%= RecommendGame.find(n).title %></li>
    <% end %>
</ul>
