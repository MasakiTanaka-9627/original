<h2>おすすめゲーム</h2>
<div class="timestamp">更新日時：<%= RecommendGame.first.updated_at.to_s(:datetime_jp) %></div>
<ul class="list-group">
    <% 20.times do |n| %>
    <li class="list-group-item">
       <div class="float-left"><%= image_tag RecommendGame.find(n).image, :size => '50x50' %></div><p><%= RecommendGame.find(n).title %></p></li>
    <% end %>
</ul>